.all_box{ padding: 30rpx 40rpx;}
.tab_nav{ overflow: hidden;text-align: center;}
.tab_nav .list{display: inline-block; border-radius: 10rpx;padding: 3rpx;background: #fff; overflow: hidden; border: 4rpx solid #00bb9e;color: #00bb9e; width: 240rpx;margin: 0 10rpx;}
.tab_nav .btn-bg{height: 44rpx;line-height: 44rpx; background: #fff;border: 1px solid #00bb9e; border-radius: 2px;}
.tab_nav .list.on{ background: #00bb9e; color: #fff;}
.tab_nav .list.on .btn-bg{ background: #00bb9e;}

.discount .text-list{border: 1px solid #00bb9e; border-radius: 10rpx; box-sizing: border-box; padding: 16rpx;}
.discount .text-list+.text-list{margin-top: 35rpx;}
.discount .img{width: 282rpx; height: 232rpx; box-sizing: border-box;  margin-right: 30rpx;}
.discount .title{-webkit-line-clamp:2; lighting-color: 1.6;}
.discount .money{line-height: 1;flex-wrap: wrap;}
.discount .money .old{ text-decoration: line-through; margin-left: 10rpx;}
.discount .link{ border-radius: 8rpx; border: 4rpx solid #00bb9e; text-align: center;color: #fff;}
.discount .link .btn-bg{background: #00bb9e;border: 3rpx solid #fff; width: 98rpx; height: 40rpx; line-height: 40rpx;}
.discount .link.on .btn-bg{background: #fff; color: #fff;}
.discount .link.on {border-color: #fff;}
.discount .money .now{white-space: nowrap;}

.coupon .T{ border: 2rpx solid #00bb9e; border-radius: 10rpx; padding: 0 30rpx;}
.coupon .title .icon{right: 0; width: 25rpx;}
.coupon .title{padding: 27rpx 0; border-bottom: 1px solid #e4e4e4;}
.coupon .title text{border-radius: 50%;margin-left: 30rpx;width: 33rpx;line-height: 33rpx;height: 33rpx;display: inline-block;text-align: center;transform: translateY(-1px);}

.my-coupon{padding: 30rpx 0;overflow:hidden;}
.my-coupon navigator {background: #00bb9e; width: 30.9%;border: 2rpx solid #00bb9e; border-radius: 7rpx; overflow: hidden;box-sizing: border-box;}
.my-coupon navigator:nth-of-type(2){margin: 0 3.65%;}
.my-coupon .info{box-sizing: border-box;background: url(http://www.fenglu-alu.com/images/lsimg/cupbg_09.jpg) bottom no-repeat;background-size: cover;padding: 17rpx 6rpx;}
