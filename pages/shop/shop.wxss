 .integral-shop .T{ background: url(http://www.fenglu-alu.com/images/lsimg/jifen_bg.png) no-repeat left top; background-size: 100% 100%; padding: 34rpx 40rpx;}
.integral-shop .icon{ width: 54rpx;}
.integral-shop .btn>navigator{text-align: center;height: 25rpx;line-height: 25rpx;}
