.integral-shop .B .list{ border: 1px solid #00bb9e; border-radius: 10rpx; width: 48%; box-sizing: border-box; overflow: hidden; margin-top: 4%;}
.integral-shop .B .img{ height: 180rpx;}
.integral-shop .B .list:nth-child(even){ margin-left: 4%;}
.integral-shop .B  .info{ padding: 20rpx 25rpx;}
