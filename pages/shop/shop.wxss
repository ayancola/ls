.my-coupon .text {text-align: center;}
.my-coupon .text text{text-align: center;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;display: block;}

.coupon-list .list{border: 6rpx solid #00bb9e; border-radius: 10rpx; box-sizing: border-box; margin-top: 30rpx;
background: url(http://www.fenglu-alu.com/images/lsimg/cpbg2_23.jpg) center bottom no-repeat;background-size: auto 100%;padding: 30rpx 25rpx;}
.coupon-list image{ width: 22rpx; margin-left: 15rpx;}
.coupon-list .txt{width: 400rpx;}
.coupon-list .btn{width: 160rpx; border-radius: 0 20rpx 20rpx 0; overflow: hidden;}
.coupon-list .btn image{ margin-left: 0; width: 123rpx; top: 0; right: 0; transform: translate(20%,-20%);}
.coupon-list .get{text-align: center; border: 4rpx solid #00bb9e; border-radius: 8rpx;padding: 3rpx;width: 126rpx;height: auto;}
.coupon-list .get .btn-bg{background: #00bb9e;border-radius: 4rpx; width: 100%; height: 37rpx; line-height: 37rpx; }
.coupon-list .get.on {border-color: #ff945e;}
.coupon-list .get.on .btn-bg{background-color: #ff945e;}
.coupon-list .info{ z-index: 2;padding: 0;}
.coupon-list .bottom{border-top: 1px solid #e4e4e4;padding-top: 12rpx;}
